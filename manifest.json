{
    "manifest_version": 2,
    "name": "Plex Server Stats",
    "description": "Displays information about a Plex Media Server",
    "version": "1.0",
    "permissions": ["<all_urls>", "storage"],
    "options_ui": {
      "page": "options/options.html",
      "open_in_tab": true
    },
    "browser_action": {
      "default_popup": "popup/popup.html"
    },
    "browser_specific_settings": {
      "gecko": {
        "id": "PlexMonitor@gtodd.dev",
        "strict_min_version": "88.0"
      }
    }
}